.event-day {
  h2 {
    display: block;
    background: #2B2B2B;
    color: white;
    margin: 0;
    padding: .5em .1em;
    text-align: center;
  }

  margin-bottom: 10vh;

  position: relative;

  .branding {
    position: absolute;
    left: 0;
    font-size: 4rem;
    img {
      z-index: 1;
      position: relative;
      margin-top: -68.18%;
    }
  }
}

.event-divider {
  border-top: 2px solid #ededed;
  width: 100%;
}

.row {
  font-size: 26px;
}

.footer {
  background: #2B2B2B;
  color: whitesmoke;
  font-size: 1rem;
  padding-top: 1em;
  padding-bottom: 1em;
}
